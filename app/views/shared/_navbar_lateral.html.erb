        <button data-bs-toggle="modal" data-bs-target="#newEntryModal" class="button-navbar-remove" title="Write a New Entry">
          <i class="fa-solid fa-circle-plus menu-icons icons"></i>
        </button>


      </div>
    <div class="dropdown">
      <a href="<%= profile_path %>" class="d-flex align-items-center justify-content-center p-3 link-dark text-decoration-none dropdown-toggle menu-icons" id="dropdownUser3" data-bs-toggle="dropdown" aria-expanded="false">
        <%= image_tag "profile_picture.jpg", alt: "Profile picture", class: "rounded-circle menu-icons profile-picture"%>
      </a>
      <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser3">
        <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item text-dark"%></li>
      </ul>
    </div>
</div>
